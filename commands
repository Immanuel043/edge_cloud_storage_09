# 1. Clone and setup
git clone <your-repo>
cd edge-cloud-storage
chmod +x scripts/setup.sh
./scripts/setup.sh

# 2. Start all services
docker-compose up -d

# 3. Development mode (with hot reload)
# Terminal 1: Storage Service
cd services/storage-service
source venv/bin/activate
uvicorn app.main:app --reload --port 8000

# Terminal 2: Web Service
cd services/web-service
npm run dev

# Terminal 3: Frontend
cd frontend
npm run dev

# 4. Access the application
# Frontend: http://localhost:3000
# Storage API: http://localhost:8000/docs
# Web Service: http://localhost:3001

# 5. Monitor logs
docker-compose logs -f

# 6. Stop services
docker-compose down